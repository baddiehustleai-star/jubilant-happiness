# Local environment variables for development
# Copy this file to .env.local and fill in your actual values
# .env.local is gitignored and safe for your secrets

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Stripe Configuration
# Server-side secret key (for API routes and scripts)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Client-visible Stripe Price ID (must be prefixed with VITE_)
VITE_STRIPE_PRICE_ID=price_your_stripe_price_id

# Optional: Third-party API Keys
REMOVEBG_API_KEY=your-removebg-api-key
EBAY_APP_ID=your-ebay-app-id
EBAY_CERT_ID=your-ebay-cert-id
EBAY_DEV_ID=your-ebay-dev-id
EBAY_OAUTH_TOKEN=your-ebay-oauth-token

# Optional: SendGrid (for transactional emails)
SENDGRID_API_KEY=your-sendgrid-api-key

# Optional: Vercel API (for deployment scripts)
VERCEL_TOKEN=your-vercel-personal-token
VERCEL_PROJECT_ID=your-vercel-project-id
