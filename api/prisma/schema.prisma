// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id           String   @id @default(cuid())
  email        String
  amount       Int      // in cents
  currency     String   @default("usd")
  status       String
  createdAt    DateTime @default(now())
}
